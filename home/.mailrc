# $FreeBSD: release/10.0.0/share/skel/dot.mailrc 50476 1999-08-28 00:22:10Z peter $
#
# .mailrc - mail resources
#
# see also mail(1)
#

set append ask autoprint 
set indentprefix="> "
set PAGER=less
set EDITOR=vim
set VISUAL=vim
set folder=Mail
retain bcc cc date from subject to

# include your private mail aliases
source ~/.mail_aliases
